# Local Development Environment Variables
# These are safe values for local development only

# Port Configuration
FRONTEND_PORT=3000
BACKEND_PORT=8000

# Database Configuration (Local Development Only)
POSTGRES_DB=user_management
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
MONGO_DB=user_profiles
MONGO_USER=admin
MONGO_PASSWORD=password

# JWT Configuration (Development Only - NOT FOR PRODUCTION)
JWT_SECRET=dev-jwt-secret-not-for-production-use-only
JWT_REFRESH_SECRET=dev-refresh-secret-not-for-production-use-only
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Application Configuration
NODE_ENV=development
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:3000
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr
USE_MOCK_DB=false

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=User Management System (Dev)
VITE_APP_VERSION=1.0.0-dev