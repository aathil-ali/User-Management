{
  "name": "user-management-backend",
  "version": "1.0.0",
  "description": "Enterprise User Management System Backend",
  "main": "dist/app.js",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "cross-env TEST_TYPE=unit jest --selectProjects unit",
    "test:integration": "cross-env TEST_TYPE=integration jest --selectProjects integration --runInBand",
    "test:e2e": "cross-env TEST_TYPE=e2e jest --selectProjects e2e --runInBand",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "cross-env TEST_TYPE=unit jest --selectProjects unit --coverage --watchAll=false",
    "test:validate": "ts-node tests/validateTestEnvironment.ts",
    "db:migrate": "ts-node -r tsconfig-paths/register src/database/cli.ts migrate",
    "db:migrate:rollback": "ts-node -r tsconfig-paths/register src/database/cli.ts migrate:rollback",
    "db:seed": "ts-node -r tsconfig-paths/register src/database/cli.ts seed",
    "db:seed:rollback": "ts-node -r tsconfig-paths/register src/database/cli.ts seed:rollback",
    "db:fresh": "ts-node -r tsconfig-paths/register src/database/cli.ts db:fresh",
    "db:reset": "ts-node -r tsconfig-paths/register src/database/cli.ts db:reset",
    "db:status": "ts-node -r tsconfig-paths/register src/database/cli.ts db:status",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.4",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "cross-env": "^10.0.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "user-management",
    "authentication",
    "typescript",
    "express",
    "clean-architecture"
  ],
  "author": "User Management System",
  "license": "MIT"
}
